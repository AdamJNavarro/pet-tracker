{
	"name": "pet-tracker",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview --host",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:ci": "svelte-kit sync && svelte-check --threshold error --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"eslint": "eslint .",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"stylelint:css": "stylelint \"src/**/*.css\"",
		"stylelint:svelte": "stylelint \"src/**/*.svelte\" --custom-syntax postcss-html",
		"db-gen-dev": "DB_ENV=dev drizzle-kit generate",
		"db-gen-prod": "drizzle-kit generate",
		"db-mig-dev": "DB_ENV=dev drizzle-kit migrate",
		"db-mig-prod": "drizzle-kit migrate",
		"db-seed": "tsx src/server/db/seed.ts",
		"db-dev-studio": "DB_ENV=dev drizzle-kit studio",
		"db-prod-studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.7",
		"@eslint/js": "^9.21.0",
		"@iconify/json": "^2.2.306",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-netlify": "^4.4.2",
		"@sveltejs/enhanced-img": "^0.4.4",
		"@sveltejs/kit": "^2.18.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/node": "^22.13.9",
		"drizzle-kit": "^0.30.4",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^10.0.2",
		"eslint-plugin-svelte": "^3.0.2",
		"globals": "^15.15.0",
		"lefthook": "^1.10.10",
		"postcss": "^8.5.3",
		"postcss-html": "^1.8.0",
		"postcss-preset-env": "^10.1.5",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"stylelint": "^16.15.0",
		"stylelint-config-standard": "^37.0.0",
		"svelte": "^5.22.1",
		"svelte-check": "^4.1.4",
		"svelte-preprocess": "^6.0.3",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0",
		"unplugin-icons": "^22.0.0",
		"vite": "^6.1.0"
	},
	"type": "module",
	"dependencies": {
		"drizzle-orm": "^0.39.3",
		"postgres": "^3.4.5",
		"svelte-hot-french-toast": "^1.0.0",
		"sveltekit-search-params": "^3.0.0"
	}
}
